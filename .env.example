# ================================================
# StealthCrawler v17 - Environment Variables
# ================================================

# General Settings
CRAWLER_NAME=StealthCrawler
LOG_LEVEL=INFO
MAX_WORKERS=10
MAX_PAGES=1000
MAX_DEPTH=10
MAX_CONCURRENT=10
TIMEOUT=30000

# Stealth Settings
HEADLESS=true
USER_AGENT_ROTATION=true
FINGERPRINT_RANDOMIZATION=true

# Rate Limiting
REQUESTS_PER_SECOND=2
RATE_LIMIT=5.0
ADAPTIVE_RATE_LIMIT=true
BACKOFF_FACTOR=2.0
MAX_BACKOFF=60

# Proxy Settings
USE_PROXY=false
PROXY_LIST_FILE=proxies.txt
PROXY_ROTATION=true
PROXY_HEALTH_CHECK=true
PROXY_LIST=

# Tor Settings
USE_TOR=false
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=
TOR_CONTROL_PASSWORD=

# Authentication
AUTH_METHOD=none
AUTH_USERNAME=
AUTH_PASSWORD=
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_TOKEN_URL=
CRAWLER_EMAIL=
CRAWLER_PASSWORD=
CRAWLER_API_KEY=
CRAWLER_TOKEN=

# CAPTCHA
CAPTCHA_SOLVER=none
CAPTCHA_API_KEY=
TWO_CAPTCHA_API_KEY=
ANTI_CAPTCHA_API_KEY=
TWOCAPTCHA_API_KEY=
ANTICAPTCHA_API_KEY=
CAPMONSTER_API_KEY=

# AI Vision Analysis
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
VISION_ANALYSIS_ENABLED=false

# Distributed Crawling
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
DISTRIBUTED_MODE=false

# API Server
API_ENABLED=false
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Webhooks
WEBHOOK_ENABLED=false
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Export Settings
EXPORT_FORMAT=json
EXPORT_DIR=output
SAVE_SCREENSHOTS=true
SAVE_HTML=true

# Elasticsearch
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=stealth-crawler

# Checkpointing
CHECKPOINT_ENABLED=true
CHECKPOINT_DIR=checkpoints
CHECKPOINT_INTERVAL=300

# Scope Management
SCOPE_MODE=strict
ALLOW_SUBDOMAINS=true
RESPECT_ROBOTS_TXT=true

# Browser Settings
BROWSER_TYPE=chromium
BROWSER_ARGS=--disable-blink-features=AutomationControlled
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Docker
WORKER_REPLICAS=3
